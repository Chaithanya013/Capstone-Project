pipeline {
    agent any

    parameters {
        choice(
            name: 'ENV',
            choices: ['dev', 'staging', 'prod'],
            description: 'Select environment'
        )
    }

    stages {

        stage('Checkout Code') {
            steps {
                checkout scm
            }
        }

        stage('Build Images') {
            steps {
                script {
                    env.IMAGE_TAG = params.ENV
                }

                dir('backend') {
                    bat "docker build -t chaithanya013/backend:${env.IMAGE_TAG} -f dockerfile ."
                }

                dir('frontend') {
                    bat "docker build -t chaithanya013/frontend:${env.IMAGE_TAG} -f dockerfile ."
                }
            }
        }

        stage('Unit Tests') {
            steps {
                dir('backend') {
                    bat 'docker run --rm chaithanya013/backend:dev pytest -p no:cacheprovider'
                }
            }
        }

        stage('Trivy Scan') {
            steps {
                script {
                    def ws = env.WORKSPACE.replace('\\', '/')

                    bat """
                        docker save chaithanya013/backend:dev -o backend.tar
                        docker save chaithanya013/frontend:dev -o frontend.tar
                    """

                    bat """
                        docker run --rm -v ${ws}:/scan aquasec/trivy:latest image \
                        --input /scan/backend.tar --severity HIGH,CRITICAL --exit-code 0
                    """

                    bat """
                        docker run --rm -v ${ws}:/scan aquasec/trivy:latest image \
                        --input /scan/frontend.tar --severity HIGH,CRITICAL --exit-code 0
                    """
                }
            }
        }

        stage('Push to Docker Hub') {
            steps {
                withCredentials([usernamePassword(
                    credentialsId: 'dockerhub-creds',
                    usernameVariable: 'DOCKER_USER',
                    passwordVariable: 'DOCKER_PASS'
                )]) {
                     bat """
                    docker login -u %DOCKER_USER% -p %DOCKER_PASS%
                    docker push chaithanya013/backend:${env.IMAGE_TAG}
                    docker push chaithanya013/frontend:${env.IMAGE_TAG}
                    """
                }
            }
        }

        stage('Deploy') {
            steps {
                bat """
                    docker compose -f docker-compose.${params.ENV}.yml down --remove-orphans
                    docker compose -f docker-compose.${params.ENV}.yml up -d
                """
            }
        }

        stage('Health Check') {
            steps {
                bat "powershell -ExecutionPolicy Bypass -File scripts\\health_check.ps1 -Env ${params.ENV}"
            }
        }
    }

    post {
        failure {
            echo 'Pipeline failed. Triggering rollback...'
            bat "powershell -ExecutionPolicy Bypass -File scripts\\rollback.ps1 -Env ${params.ENV}"
        }
    }
}
