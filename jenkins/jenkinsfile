pipeline {
    agent any

    parameters {
        choice(
            name: 'ENV',
            choices: ['dev', 'staging', 'prod'],
            description: 'Select environment to deploy'
        )
    }

    stages {

        stage('Checkout Code') {
            steps {
                checkout scm
            }
        }

        stage('Build Backend Image') {
            steps {
                dir('backend') {
                    bat 'docker build -t chaithanya013/backend:dev .'
                }
            }
        }

        stage('Build Frontend Image') {
            steps {
                dir('frontend') {
                    bat 'docker build -t chaithanya013/frontend:dev .'
                }
            }
        }

        stage('Trivy Scan - Backend') {
            steps {
                bat '''
                docker run --rm ^
                  -v /var/run/docker.sock:/var/run/docker.sock ^
                  aquasec/trivy:latest image ^
                  --severity HIGH,CRITICAL ^
                  --exit-code 0 ^
                  chaithanya013/backend:dev
                '''
            }
        }

        stage('Trivy Scan - Frontend') {
            steps {
                bat '''
                docker run --rm ^
                  -v /var/run/docker.sock:/var/run/docker.sock ^
                  aquasec/trivy:latest image ^
                  --severity HIGH,CRITICAL ^
                  --exit-code 0 ^
                  chaithanya013/frontend:dev
                '''
            }
        }

        stage('Deploy Application') {
            steps {
                bat "docker compose -f docker-compose.%ENV%.yml down --remove-orphans"
                bat "docker compose -f docker-compose.%ENV%.yml up -d --build"
            }
        }

        stage('Health Check') {
            steps {
                bat "powershell -ExecutionPolicy Bypass -File scripts\\health_check.ps1 -Env %ENV%"
            }
        }
    }

    post {
        failure {
            echo 'Pipeline failed. Triggering rollback...'
            bat "powershell -ExecutionPolicy Bypass -File scripts\\rollback.ps1 -Env %ENV%"
        }
    }
}
