pipeline {
    agent any

    parameters {
        choice(name: 'ENV', choices: ['dev', 'staging', 'prod'], description: 'Select environment')
    }

    stages {
        stage('Checkout Code') {
            steps {
                checkout scm
            }
        }

        stage('Build Images') {
            steps {
                dir('backend') { bat 'docker build -t chaithanya013/backend:dev -f dockerfile .' }
                dir('frontend') { bat 'docker build -t chaithanya013/frontend:dev -f dockerfile .' }
            }
        }

        stage('Unit Tests') {
            steps {
                dir('backend') {
                    bat 'docker run --rm chaithanya013/backend:dev pytest -p no:cacheprovider'
                }
            }
        }

        stage('Trivy Scan') {
            steps {
                bat 'docker save chaithanya013/backend:dev -o backend.tar'
                script {
                    def ws = env.WORKSPACE.replace('\\', '/')
                    bat "docker run --rm -v ${ws}:/scan aquasec/trivy:latest image --input /scan/backend.tar --severity HIGH,CRITICAL"
                }
            }
        }

        stage('Push to Docker Hub') {
            steps {
                withCredentials([usernamePassword(credentialsId: 'dockerhub-creds', usernameVariable: 'DOCKER_USER', passwordVariable: 'DOCKER_PASS')]) {
                    bat """
                        docker login -u ${DOCKER_USER} -p ${DOCKER_PASS}
                        docker tag chaithanya013/backend:dev chaithanya013/backend:${params.ENV}
                        docker push chaithanya013/backend:${params.ENV}
                    """
                }
            }
        }

        stage('Deploy') {
            steps {
                // Use double quotes to ensure Jenkins replaces ${params.ENV}
                bat """
                    docker compose -f docker-compose.${params.ENV}.yml down --remove-orphans
                    docker compose -f docker-compose.${params.ENV}.yml up -d
                """
            }
        }

        stage('Health Check') {
            steps {
                // Pass the parameter correctly to PowerShell
                bat "powershell -ExecutionPolicy Bypass -File scripts\\health_check.ps1 -Env ${params.ENV}"
            }
        }
    }

    post {
        failure {
            echo 'Pipeline failed. Triggering rollback....'
            bat "powershell -ExecutionPolicy Bypass -File scripts\\rollback.ps1 -Env ${params.ENV}"
        }
    }
}