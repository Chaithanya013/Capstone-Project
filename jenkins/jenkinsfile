pipeline {
    agent any

    parameters {
        choice(
            name: 'ENV',
            choices: ['dev', 'staging', 'prod'],
            description: 'Select environment'
        )
    }

    environment {
        DOCKER_BUILDKIT = '1'
    }

    stages {

        stage('Checkout Code') {
            steps {
                checkout scm
            }
        }

        stage('Build Backend Image') {
            steps {
                dir('backend') {
                    bat 'docker build -t chaithanya013/backend:dev .'
                }
            }
        }

        stage('Build Frontend Image') {
            steps {
                dir('frontend') {
                    bat 'docker build -t chaithanya013/frontend:dev .'
                }
            }
        }

        stage('Unit Tests') {
            steps {
                dir('backend') {
                    bat 'docker run --rm chaithanya013/backend:dev pytest'
                }
            }
        }

        stage('Trivy Scan - Backend') {
            steps {
                bat 'trivy image --severity HIGH,CRITICAL --exit-code 0 chaithanya013/backend:dev'
            }
        }

        stage('Trivy Scan - Frontend') {
            steps {
                bat 'trivy image --severity HIGH,CRITICAL --exit-code 0 chaithanya013/frontend:dev'
            }
        }

        stage('Push Images to Docker Hub') {
            when {
                expression { params.ENV == 'staging' || params.ENV == 'prod' }
            }
            steps {
                withCredentials([usernamePassword(
                    credentialsId: 'dockerhub-creds',
                    usernameVariable: 'DOCKER_USER',
                    passwordVariable: 'DOCKER_PASS'
                )]) {
                    bat '''
                    docker login -u %DOCKER_USER% -p %DOCKER_PASS%

                    docker tag chaithanya013/backend:dev chaithanya013/backend:%ENV%
                    docker tag chaithanya013/frontend:dev chaithanya013/frontend:%ENV%

                    docker push chaithanya013/backend:%ENV%
                    docker push chaithanya013/frontend:%ENV%
                    '''
                }
            }
        }

        stage('Deploy Application') {
            steps {
                bat '''
                docker compose -f docker-compose.%ENV%.yml down --remove-orphans
                docker compose -f docker-compose.%ENV%.yml up -d
                '''
            }
        }

        stage('Health Check') {
            steps {
                bat 'powershell -ExecutionPolicy Bypass -File scripts\\health_check.ps1 -Env %ENV%'
            }
        }
    }

    post {
        failure {
            echo 'Pipeline failed. Triggering rollback...'
            bat 'powershell -ExecutionPolicy Bypass -File scripts\\rollback.ps1 -Env %ENV%'
        }
    }
}
