pipeline {
    agent any

    parameters {
        choice(
            name: 'ENV',
            choices: ['dev', 'staging', 'prod'],
            description: 'Select environment'
        )
    }

    environment {
        BACKEND_IMAGE = "chaithanya013/backend:dev"
        FRONTEND_IMAGE = "chaithanya013/frontend:dev"
        WORKSPACE_DIR = "${env.WORKSPACE}"
    }

    stages {

        stage('Checkout Code') {
            steps {
                checkout scm
            }
        }

        stage('Build Backend Image') {
            steps {
                dir('backend') {
                    bat 'docker build -t %BACKEND_IMAGE% -f dockerfile .'
                }
            }
        }

        stage('Build Frontend Image') {
            steps {
                dir('frontend') {
                    bat 'docker build -t %FRONTEND_IMAGE% -f dockerfile .'
                }
            }
        }

        stage('Unit Tests') {
            steps {
                dir('backend') {
                    bat 'docker run --rm %BACKEND_IMAGE% pytest'
                }
            }
        }

        stage('Save Images for Trivy') {
            steps {
                bat '''
                docker save %BACKEND_IMAGE% -o backend.tar
                docker save %FRONTEND_IMAGE% -o frontend.tar
                '''
            }
        }

        stage('Trivy Scan - Backend') {
            steps {
                bat '''
                docker run --rm ^
                  -v %WORKSPACE_DIR%:/scan ^
                  aquasec/trivy:latest image ^
                  --input /scan/backend.tar ^
                  --severity HIGH,CRITICAL ^
                  --exit-code 0
                '''
            }
        }

        stage('Trivy Scan - Frontend') {
            steps {
                bat '''
                docker run --rm ^
                  -v %WORKSPACE_DIR%:/scan ^
                  aquasec/trivy:latest image ^
                  --input /scan/frontend.tar ^
                  --severity HIGH,CRITICAL ^
                  --exit-code 0
                '''
            }
        }

        stage('Push Images to Docker Hub') {
            steps {
                withCredentials([usernamePassword(
                    credentialsId: 'dockerhub-creds',
                    usernameVariable: 'DOCKER_USER',
                    passwordVariable: 'DOCKER_PASS'
                )]) {
                    bat '''
                    docker login -u %DOCKER_USER% -p %DOCKER_PASS%

                    docker tag %BACKEND_IMAGE% chaithanya013/backend:%ENV%
                    docker tag %FRONTEND_IMAGE% chaithanya013/frontend:%ENV%

                    docker push chaithanya013/backend:%ENV%
                    docker push chaithanya013/frontend:%ENV%
                    '''
                }
            }
        }

        stage('Deploy Application') {
            steps {
                bat '''
                docker compose -f docker-compose.%ENV%.yml down --remove-orphans
                docker compose -f docker-compose.%ENV%.yml up -d
                '''
            }
        }

        stage('Health Check') {
            steps {
                bat 'powershell -ExecutionPolicy Bypass -File scripts\\health_check.ps1 -Env %ENV%'
            }
        }
    }

    post {
        failure {
            echo 'Pipeline failed. Triggering rollback...'
            bat 'powershell -ExecutionPolicy Bypass -File scripts\\rollback.ps1 -Env %ENV%'
        }
    }
}
